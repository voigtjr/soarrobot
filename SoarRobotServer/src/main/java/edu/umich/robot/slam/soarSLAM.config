//overall slam parameters (put angles in degrees, ignore the naming conventions of variables)
Slam{
	distErr = 0.15;
	rotErr = 0.1;

	decimate = 1;
	maxScanHistory = 5;
	old_scan_decay = 5;	

	pose_dist_thresh_m = 0.75;
	pose_theta_thresh_rad = 25;

	useOdom = true;
	closeLoop = true;

	//search parameters for close loop matching
	matchScore = 10000;
    	thetaRange = 20;
    	thetaRangeRes = 1;
    	searchRange = 5.0;
	
	//open loop without odometry (ignore if using odometry)
	metersPerPixel = 0.025;
	rangeCovariance = 0.0035;
	search_x_m = 0.1;
	search_y_m = 0.1;
	search_theta_rad = 10;
	search_theta_res_rad = 1;
	gridmapsize = 10;
}

//scan matcher parameters (search info for open loop info here)
LoopMatcher{
	metersPerPixel = 0.05;
 	rangeCovariance = 0.0035;
    	gridmap_size = 10;
    	distErr = 0.05;
    	rotErr = 0.05;
    	minMatchScore = 10000000;
    	trange = 3;
    	trangeres = 1;
    	xyrange = 0.1;
    	xCov = 1.0;
    	yCov = 1.0;
    	tCov = 5.0;
}

//loop closure task parameters
LoopCloser{
        max_loop_length = 4;
        maxScanMatchAttempts = 40;
        maxAcceptEdges = 10;
        minTrace = 0.2;
        maxHypothesisAge = 20;
        mahlMax = 1.0;
        hypoAddDistThres = 5.0;
	closeFrequency = 1.0;
}
