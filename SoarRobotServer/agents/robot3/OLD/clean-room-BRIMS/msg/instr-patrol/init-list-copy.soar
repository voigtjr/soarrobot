sp {instr-patrol*propose*init-list-copy
   (state <s> ^name instr-patrol
             -^copy-destination)
-->
   (<s> ^operator <op> + =)
   (<op> ^name init-list-copy)
}

sp {apply*init-list-copy
   (state <s> ^operator.name init-list-copy
              ^top-state.patrol <p>
              ^superstate.operator <so>)
   (<so> ^area-list <alist>
         ^patrol-name <pname>
         ^patrol-type <ptype>)
   (<p> ^patrol-name <pname>
        ^patrol-type <ptype>)
-->
   (<p> ^first-area <fa>)
   (<s> ^copy-destination <fa>
        ^copy-source <alist>)
}
