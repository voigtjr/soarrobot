sp {msg*propose*instr-avoid
   (state <s> ^name msg
              ^message.first <first>)
   (<first> ^word avoid
            ^next.word <word>)
-->
   (<s> ^operator <op> +)
   (<op> ^name instr-avoid
         ^room (int <word>))
}

sp {apply*instr-avoid
   (state <s> ^operator <o>
              ^top-state.areas.area <area>)
   (<o> ^name instr-avoid
        ^room <id>)
   (<area> ^id <id>)
-->
   (<area> ^avoid true)
}

sp {apply*instr-avoid*unknown
   (state <s> ^operator <op>
              ^top-state <ts>)
   (<op> ^name instr-avoid
         ^room <id>)
   (<ts> ^areas <areas>
         ^avoids <avoids>)
  -{(<areas> ^area <area>)
    (<area> ^id <id>)}
  -(<avoids> ^<id> true)
-->
   (<avoids> ^<id> true)
}

sp {apply*instr-avoid*done
   (state <s> ^operator <op>
              ^superstate.operator <ss-op>)
   (<op> ^name instr-avoid)
-->
   (<ss-op> ^processed true)
}
